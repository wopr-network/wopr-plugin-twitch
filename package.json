{
  "name": "@wopr-network/wopr-plugin-twitch",
  "version": "1.0.0",
  "description": "Twitch chat integration for WOPR with whispers and channel point redemptions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check --config-path=. src/",
    "lint:fix": "biome check --config-path=. --fix src/",
    "format": "biome format --config-path=. --write src/",
    "check": "biome check --config-path=. src/ && tsc --noEmit",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@twurple/auth": "^8.0.0",
    "@twurple/chat": "^8.0.0",
    "@twurple/api": "^8.0.0",
    "@twurple/eventsub-ws": "^8.0.0",
    "@wopr-network/plugin-types": "^0.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^25.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.0",
    "semantic-release": "^24.0.0",
    "@wopr-network/semantic-release-config": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "wopr",
    "plugin",
    "twitch",
    "chat",
    "bot",
    "streaming"
  ],
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
